<h1>Discover Movies</h1>
<p>
    <%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get %>
</p>
<p>
    <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
        <%= f.label :search, 'Search by Movie Title'  %>
        <%= f.text_field :search %>
        <%= f.submit 'Search by Movie Title' %>
    <% end %>
</p>